@model StudentMedicalCertificateSystem.Models.EducationalProgram
<div class = "container">
    <div>
        <h2>Вы уверены, что хотите удалить эту образовательную программу?</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Наименование программы
            </dt>
            <dd class="col-sm-10">
                @Model.ProgramName
            </dd>
        </dl>

        <br />

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="hidden" asp-for="ProgramName" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>

<style>
    dl.row {
        width: 100%;
        margin: 0;
        border-spacing: 0;
        border-collapse: separate;
    }

    dt {
        display: table-cell;
        padding: 10px;
        border: 1px solid #dee2e6;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-top: 10px;
    }

</style>