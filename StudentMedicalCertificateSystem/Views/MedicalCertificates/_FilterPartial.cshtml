@model StudentMedicalCertificateSystem.Models.Students
<details>
    <summary>Сортировка</summary>
    @using (Html.BeginForm("Filter", "MedicalCertificates", FormMethod.Post))
    {
        <br />
        <div class="form-outline w-50 input-group">
            <label class="control-label" style="margin-top: 0.5%">Период с</label>
            <input type="date" name="startOfIlness" class="form-control" style="margin-left:5%" />

            <label class="control-label" style="margin-left:5%; margin-top: 0.5%">по</label>
            <input type="date" name="endOfIlness" class="form-control" style="margin-left:5%" />
        </div>
        <br />
        <form asp-action="Filter" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group w-25 form-group-horizontal">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" placeholder="Не выбрано" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group w-25 form-group-horizontal">
                <label asp-for="FirstName" class="control-label" style="margin-right: 18%">Имя</label>
                <input asp-for="FirstName" placeholder="Не выбрано" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group w-25 form-group-horizontal">
                <label asp-for="Patronymic" class="control-label">Отчество</label>
                <input asp-for="Patronymic" placeholder="Не выбрано" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Поиск</button>
            </div>

        </form>

        <input type="hidden" asp-for="OfficeID" />
    }
</details>

<br />

<style>
    .form-group-horizontal {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .form-group-horizontal .control-label {
        margin-right: 7%;
    }
</style>
