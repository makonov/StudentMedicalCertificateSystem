@model IEnumerable<StudentMedicalCertificateSystem.Models.MedicalCertificates>

@{
    ViewData["Title"] = "Заявки";
}

<a href="@Url.Action("Create")">Создать новую заявку</a>
<br />

@await Html.PartialAsync("_FilterPartial", new StudentMedicalCertificateSystem.Models.Students())
@if (Model.Count() != 0)
{
    <table>
        <thead>
            <tr>
                <th>Номер заявки</th>
                <th>Студент</th>
                <th>Ответственный работник</th>
                <th>Клиника</th>
                <th>Диагноз</th>
                <th>Справка</th>
                <th>Дата начала болезни</th>
                <th>Дата выздоровления</th>
                <th>Комментарии сотрудника</th>
                <th>Дата создания</th>
                <th>Дата последнего обновления</th>
                <th>Действия</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var certificate in Model)
            {
                <tr>
                    <td>@certificate.CertificateID</td>
                    <td>@certificate.Student.LastName @certificate.Student.FirstName @certificate.Student.Patronymic</td>
                    <td>@certificate.User.LastName @certificate.User.FirstName @certificate.User.Patronymic</td>
                    <td>@certificate.Clinic.ClinicName</td>
                    <td>@certificate.Diagnosis.DiagnosisName</td>
                    <td>
                        <a target="_blank" href="@Url.Action("ImageView", "MedicalCertificates", new { imagePath = certificate.CertificatePath })">Посмотреть справку</a>
                    </td>
                    <td>@certificate.IlnessDate.ToString("dd.MM.yyyy")</td>
                    <td>@certificate.RecoveryDate.ToString("dd.MM.yyyy")</td>
                    <td>@certificate.Answer</td>
                    <td>@certificate.CreatedAt</td>
                    <td>@certificate.UpdatedAt</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = certificate.CertificateID })">Редактировать</a> ||
                        <a href="@Url.Action("Delete", new { id = certificate.CertificateID })">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Увы, но ничего не найдено</p>
}


<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>