@model StudentMedicalCertificateSystem.Models.StudentGroup
<div class="container">
   

    <div>
        <div class="col-md-12 alert alert-danger" style="margin-top: 20px;">
            <span style="font-size: 18px;"><b>Внимание!</b> - При удалении группы удалятся все прикрепленные к ней студенты, а за ними вслед удалятся все созданные на них справки.</span>
        </div>
        
        <h2>Вы уверены, что хотите удалить эту группу?</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Наименование группы
            </dt>
            <dd class="col-sm-10">
                @Model.GroupName
            </dd>

            <dt class="col-sm-2">
                Образовательная программа
            </dt>
            <dd class="col-sm-10">
                @Model.Program.ProgramName
            </dd>
        </dl>

        <br />

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="hidden" asp-for="GroupID" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>

<style>
    dl.row {
        width: 100%;
        margin: 0;
        border-spacing: 0;
        border-collapse: separate;
    }

    dt {
        display: table-cell;
        padding: 10px;
        border: 1px solid #dee2e6;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-top: 10px;
    }

</style>