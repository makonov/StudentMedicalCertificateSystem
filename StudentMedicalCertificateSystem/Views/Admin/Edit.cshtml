@using Microsoft.AspNetCore.Identity
@model StudentMedicalCertificateSystem.ViewModels.ChangeRoleViewModel

<div class="container mt-4">
    <h2>Изменение ролей для пользователя @Model.UserName</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="@Model.UserID" />

        <div class="form-group">
            @foreach (IdentityRole role in Model.AllRoles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="roles" value="@role.Name"
                    @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label">@role.Name</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>
