@using Microsoft.AspNetCore.Identity
@model StudentMedicalCertificateSystem.ViewModels.ChangeRoleViewModel

@section Scripts {
    <!-- Подключение Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
}

<div class="container mt-4">
    <h2>Изменение роли для пользователя @Model.UserName</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="@Model.UserID" />

        <div class="form-group">
            @foreach (IdentityRole role in Model.AllRoles)
            {
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="role" id="@role.Name" value="@role.Name"
                    @(Model.UserRole.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label" for="@role.Name">@role.Name</label>
                </div>
            }
        </div>


        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>
