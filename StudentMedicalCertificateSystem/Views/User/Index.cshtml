@model IEnumerable<StudentMedicalCertificateSystem.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Пользователи";
}

<a class="btn btn-sm btn-primary" href="@Url.Action("Create")">Зарегистрировать нового пользователя</a>
<br />
<br />

@if (Model.Count() != 0)
{
    <table>
        <thead>
            <tr>
                <th>Имя пользователя</th>
                <th>ФИО</th>
                <th>Роли</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.LastName @user.FirstName @user.Patronymic</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-userid ="@user.UserID">Редактировать роль</a> || <br />
                        <a asp-controller="MedicalCertificate" asp-action="Delete">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Увы, но ничего не найдено</p>
}


<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
    }
</style>